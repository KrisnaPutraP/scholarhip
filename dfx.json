{
  "version": 1,
  "canisters": {
    "scholarship_backend": {
      "type": "rust",
      "package": "scholarship_backend",
      "candid": "src/scholarship_backend/scholarship_backend.did"
    },
    "scholarship_frontend": {
      "type": "assets",
      "source": ["src/scholarship_frontend/dist"],
      "dependencies": ["scholarship_backend"]
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}